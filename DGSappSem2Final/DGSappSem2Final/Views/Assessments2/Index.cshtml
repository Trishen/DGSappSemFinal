@model IEnumerable<DGSappSem2Final.Models.Assements.Assessment>

@{
    ViewBag.Title = "Index";
}

<h2>Assessment</h2>

<p>
    @Html.ActionLink("Add a New Assessment", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AssessmentName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AssessmentName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AssessmentID }) |
            @Html.ActionLink("Details", "Details", new { id=item.AssessmentID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AssessmentID })
